<div style="text-align:center" class="container pdng" ng-controller="quizCtrl">
    @*<div ng-view></div>*@
    <div ng-show="questionCounter === 0">
        <div>
            <h3>How well do you know your uniforms?<br /> Take this quiz to find out!</h3>
        </div>
        <div class="pdng">
            @*<a href="#quiz">*@<button class="btn btn-lg btn-danger" ng-click="startQuiz()">Start Quiz</button>@*</a>*@
        </div>
    </div> @*Home partial*@    
    <div ng-if="quizActive">
        <div style="color:darkred">
            <h3><b>{{timeCounter*10 | number}}s</b></h3>
        </div>
        <div class="well well-sm">
            <div class="row">
                <div class="col-xs-12">
                    <h4><b>{{questionCounter}}. What is the uniform of {{questionTitle.Name}}?</b></h4>
                    <div class="row">
                        <div class="col-xs-6" ng-repeat="c in questionElements">
                            <div class="image-answer glowing-border">
                                <img ng-click="evaluateAnswers(c.Uniform)" ng-src="{{c.Uniform}}" width="300" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <h4>{{score}}</h4>
    </div> @*Quiz partial*@
    <div class="row" ng-show="resultsActive">
        <div>
            <h2>{{message}}</h2>
        </div>
        <div>
            <h3>Your Score: {{playerScore}} </h3>
            <h2><b>{{score | number}}pts</b></h2>
            @*<a href="#/">*@<button class="btn btn-lg btn-success" ng-show="resultsActive" ng-click="finalizeQuiz()">Back To Home</button>@*</a>*@
        </div>
    </div> @*Results partial*@    
</div>